{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "outDir": "./dist",
    "baseUrl": "./lib",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "module": "commonjs"
  },
  "include": [
    "lib/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
